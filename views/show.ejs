    <body>
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <div class="container-fluid">
            <div class="row rellax" data-rellax-speed="4">
                <!-- todo: add a headline section with maybe a call to action that will flex center vert / horz -->
                <div id="title" class="col-md-2 col-xs-offset-2 title-box">
                    My blog.
                </div>
                
            </div>
        <div class="row" style="margin-top: 2rem">
                <% let date = new Date() %>
                <% date.setTime(data.date) %>
                <div class="col-xs-offset-1 col-xs-11 col-sm-offset-2 col-sm-8 content-show">
                    <h2>
                        <%= data.title %>
                        
                    </h2>
                    <hr class="hr_bold">
                    <p>
                        <!-- <small> <%= data.date %> </small> -->
                        <small><%- date.getMonth() + 1 %> / <%= date.getDate() %> / <%= date.getFullYear() %></small>
                    </p>
                    <article>
                       <%- data.content %>
                    </article>
                    <hr>
                    <p>
                        by <a href="https://github.com/Ethanb75">Ethan</a>.
                    </p>
                </div>
               
            </div>

            <div class="row">
                <div class="col-xs-offset-1 col-xs-11 col-sm-offset-2 col-sm-8 ratingWrap">
                    <div class="happy">
                        <i id="smile" class="fa fa-smile-o fa-4x" aria-hidden="true"></i>
                        <span>
                            <%= data.smiles %>
                        </span>
                    </div>
                    <div class="sad">
                        <i id="frown" class="fa fa-frown-o fa-4x" aria-hidden="true"></i>
                        <span>
                            <%= data.frowns %>
                        </span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="btn-group btn-group-justified" role="group" aria-label="..." style="margin-top: 4rem; overflow: hidden">
                    <a class="btn btn-default big" role="button" href="/"><< Go Back</a>
                    <a id="randomBtn" class="btn btn-default big" role="button">Random Art</a>
                    <a id="nextBtn" class="btn btn-default big" role="button">Next Art >></a>
                </div>
            </div>
             <!--end fluid container-->


       

