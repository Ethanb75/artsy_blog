        <!-- Add your site or application content here -->
        <div class="container-fluid">
            <div class="row">
                <!-- todo: add a headline section with maybe a call to action that will flex center vert / horz -->
                <div id="title" class="col-xs-10 col-md-2 col-md-offset-2 title-box">
                     My blog. 
                </div>
                <!-- <div class="visible-xs">
                    this should be seen on mobile
                </div>-->
                <div class="col-md-6 col-md-offset-2 colorful about about-down">
                    <i class="fa fa-times fa-2x" aria-hidden="true"></i>
                    <h4>About Me:</h4>
                    <hr class="hr_bold">
                    <p>
                        I'm a JS developer based in Atlanta, GA. I like working with ES6, NodeJS, and React. I'm currently improving my skills in CSS3 an SVG. In my spare time i play guitar with my bros.
                        if you want to contact me you can <a href="mailto:Belloramail@gmail.com">email me,</a> or check out my <a href="https://github.com/Ethanb75">Github,</a> or use the message box below.
                    </p>
                    <div class="icons">
                        <ul>
                            <li>
                                <a class="iconLink" href="https://github.com/Ethanb75">
                                    <i class="fa fa-2x fa-github-alt" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li>
                                <a href="https://twitter.com/EthanBellora">
                                    <i class="fa fa-2x fa-twitter" aria-hidden="true"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top: 2rem">
                <div class="col-xs-9 col-xs-offset-3 navi">
                    <ul>
                        <li id="articles">Articles</li>
                        <li id="about">About</li>
                        <li id="contact">Contact</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div id="scrollbar" class="hidden-xs col-xs-2 scroll-bar scroll-hide">
                    <ul>
                        <li id="scroll_art" class="colorful">Articles</li>
                        <li id="scroll_abt" class="colorful">About</li>
                        <li id="scroll_cnt" class="colorful">Contact</li>
                    </ul>
                </div>
                <!-- TODO: add marker for first post saying most recent -->
                <div class="col-xs-10 col-xs-offset-1 col-md-offset-2 col-md-7 content">
                  
                  <% for (let i = 0; i < dataArr.length; i++) { %>
                    <% var el = dataArr[i] %>
                    <% var date = new Date() %>
                    <% date.setTime(el.date) %>
                    <div class="article">
                      <h3>
                         <%= el.title %> <small> - <%- date.getMonth() + 1 %> / <%= date.getDate() %> / <%= date.getFullYear() %> </small>
                      </h3>
                      <hr class="hr_bold">
                      <p>
                        <%- el.content.substring(0, 350) %> . . .
                      </p>
                      <a href="/<%= el.id %>">Read More . . .</a> 
                    </div>
                  <% }; %>
                  <!-- <button id="loadmore" class="btn btn-default">Load More</button> -->
                </div>
                <div class="col-xs-5 col-md-3">
                    <div id="test">
                    <% dataArr.forEach(el => { %>
                        <div class="bar bar-hide">
                            <a href="/<%= el.id %>"><%= el.title %></a>
                        </div>
                    <% }); %>
                    </div>
                </div>
                
            </div>
            
         <!--Hiding contact form-->
         <div id="cnt" class="contact-form colorful">
            <i class="fa fa-times fa-2x" aria-hidden="true"></i>
            <h5>Message me.</h5>
            <hr class="hr_bold">
            <label for="name">name</label>
            <input type="text" name="name" placeholder="billy joe"></input>
            <label for="message">message</label>
            <form name="message" action="">
                <textarea id="textbox" type="text" placeholder="Hey guy, how you doin'?" class="textbox"></textarea>
                <div style="display: block">
                    <input type="submit" class="btn btn-default" value="Send Message"></input>
                </div>
            </form>
        </div>


         <!--Feet!-->
            <div class="row">
                <footer class="colorful">
                    by <a href="https://github.com/Ethanb75">Ethan</a>
                </footer>
            </div>
        </div> <!--end fluid container-->


       
